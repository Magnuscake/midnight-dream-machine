.navbar
  display: flex
  justify-content: space-between
  padding: 2rem 5rem
  font-size: 1.2rem

  &__menu
    display: inline-flex
    justify-content: flex-end
    gap: 1.2rem

  &__link
    text-decoration: none
    color: #000
    padding: 0.1rem 0.5rem

    &:hover
      text-decoration: underline
